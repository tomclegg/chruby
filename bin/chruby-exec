#!/usr/bin/env bash

chruby_sh="${0%/*}/../share/chruby/chruby.sh"
source "$chruby_sh"

case "$1" in
	-h|--help)
		cat <<EOF
usage: chruby-exec RUBY [RUBYOPTS] -- COMMAND [ARGS...]
       chruby-exec --auto -- COMMAND [ARGS...]
EOF
		exit
		;;
	-V|--version)
		echo "chruby version $CHRUBY_VERSION"
		exit
		;;
esac

if (( $# == 0 )); then
	echo "chruby-exec: RUBY (or --auto) and COMMAND required" >&2
	exit 1
fi

argv=()

for arg in "$@"; do
	shift

	if [[ "$arg" == "--" ]]; then break
	else                          argv+=($arg)
	fi
done

if (( $# == 0 )); then
	echo "chruby-exec: COMMAND required" >&2
	exit 1
fi

shell_opts=("-l")
[[ -t 0 ]] && shell_opts+=("-i")

source_command="command -v chruby >/dev/null || source $chruby_sh"
if [[ "${argv[@]}" == "--auto" ]]; then
    auto_sh="${0%/*}/../share/chruby/auto.sh"
    source_command+="; command -v chruby_auto >/dev/null || source $auto_sh"
    chruby_command="chruby_auto"
else
    chruby_command="chruby $(printf "%q " "${argv[@]}")"
fi
sub_command="$(printf "%q " "$@")"
command="$source_command; $chruby_command && $sub_command"

exec "$SHELL" "${shell_opts[@]}" -c "$command"
